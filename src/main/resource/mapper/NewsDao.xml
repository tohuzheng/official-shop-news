<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huzheng.dao.INewsDao">

    <resultMap type="com.huzheng.entity.News" id="NewsMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="detail" column="detail" jdbcType="VARCHAR"/>
        <result property="readNumber" column="read_number" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="createDate" column="create_date" jdbcType="TIMESTAMP"/>
        <result property="createName" column="create_name" jdbcType="VARCHAR"/>
        <result property="imgUrl" column="img_url" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="NewsMap">
        select
          id, title, detail, read_number, type, create_date, create_name, img_url
        from official_shop.news
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="NewsMap">
        select
          id, title, detail, read_number, type, create_date, create_name, img_url
        from official_shop.news
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="NewsMap">
        select
          id, title, detail, read_number, type, create_date, create_name, img_url
        from official_shop.news
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="detail != null and detail != ''">
                and detail = #{detail}
            </if>
            <if test="readNumber != null">
                and read_number = #{readNumber}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="createDate != null">
                and create_date = #{createDate}
            </if>
            <if test="createName != null and createName != ''">
                and create_name = #{createName}
            </if>
            <if test="imgUrl != null and imgUrl != ''">
                and img_url = #{imgUrl}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insertNews" keyProperty="id" useGeneratedKeys="true">
        insert into official_shop.news(title, detail, read_number, type, create_date, create_name, img_url)
        values (#{title}, #{detail}, #{readNumber}, #{type}, #{createDate}, #{createName}, #{imgUrl})
    </insert>

    <!--通过主键修改数据-->
    <update id="updateNews">
        update official_shop.news
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="detail != null and detail != ''">
                detail = #{detail},
            </if>
            <if test="readNumber != null">
                read_number = #{readNumber},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="createDate != null">
                create_date = #{createDate},
            </if>
            <if test="createName != null and createName != ''">
                create_name = #{createName},
            </if>
            <if test="imgUrl != null and imgUrl != ''">
                img_url = #{imgUrl},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteByIdNews">
        delete from official_shop.news where id = #{id}
    </delete>

</mapper>