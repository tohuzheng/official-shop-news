<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huzheng.dao.IOnlyCodeDao">

    <resultMap type="com.huzheng.entity.OnlyCode" id="OnlyCodeMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="productId" column="product_id" jdbcType="INTEGER"/>
        <result property="uuid" column="uuid" jdbcType="VARCHAR"/>
        <result property="manufactureDate" column="manufacture_date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="OnlyCodeMap">
        select
          id, product_id, uuid, manufacture_date
        from official_shop.only_code
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="OnlyCodeMap">
        select
          id, product_id, uuid, manufacture_date
        from official_shop.only_code
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="OnlyCodeMap">
        select
          id, product_id, uuid, manufacture_date
        from official_shop.only_code
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="productId != null">
                and product_id = #{productId}
            </if>
            <if test="uuid != null and uuid != ''">
                and uuid = #{uuid}
            </if>
            <if test="manufactureDate != null">
                and manufacture_date = #{manufactureDate}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insertOnlyCode" keyProperty="id" useGeneratedKeys="true">
        insert into official_shop.only_code(product_id, uuid, manufacture_date)
        values (#{productId}, #{uuid}, #{manufactureDate})
    </insert>

    <!--通过主键修改数据-->
    <update id="updateOnlyCode">
        update official_shop.only_code
        <set>
            <if test="productId != null">
                product_id = #{productId},
            </if>
            <if test="uuid != null and uuid != ''">
                uuid = #{uuid},
            </if>
            <if test="manufactureDate != null">
                manufacture_date = #{manufactureDate},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteByIdOnlyCode">
        delete from official_shop.only_code where id = #{id}
    </delete>

</mapper>